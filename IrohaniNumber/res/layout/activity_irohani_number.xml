<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/title_background" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:shadowColor="#99000000"
        android:shadowDx="3.0"
        android:shadowDy="5.0"
        android:shadowRadius="2.0"
        android:text="いろはにほへと！"
        android:textColor="@color/white"
        android:textSize="36dp"
        android:textStyle="bold"
        tools:context=".IrohaniNumber" />

    <Button
        android:id="@+id/instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignRight="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="42dp"
        android:background="@layout/original_button"
        android:text="いろは歌とは？"
        android:textStyle="bold" />

    <Button
        android:id="@+id/practice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/instructions"
        android:layout_alignRight="@+id/instructions"
        android:layout_below="@+id/instructions"
        android:layout_marginTop="3dp"
        android:background="@layout/original_button"
        android:text="練習"
        android:textStyle="bold" />

    <Button
        android:id="@+id/level1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="3dp"
        android:layout_toLeftOf="@+id/level1_score"
        android:background="@layout/original_button"
        android:text="初級"
        android:textStyle="bold" />

    <Button
        android:id="@+id/level1_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@layout/original_button"
        android:text="得点"
        android:textStyle="bold" />

    <Button
        android:id="@+id/level2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/level1"
        android:layout_below="@+id/level1"
        android:layout_marginTop="3dp"
        android:background="@layout/original_button"
        android:text="中級"
        android:textStyle="bold" />

    <Button
        android:id="@+id/level2_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/level1"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/level1"
        android:background="@layout/original_button"
        android:text="得点"
        android:textStyle="bold" />

    <Button
        android:id="@+id/level3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/level2"
        android:layout_below="@+id/level2"
        android:layout_marginTop="3dp"
        android:background="@layout/original_button"
        android:text="上級"
        android:textStyle="bold" />

    <Button
        android:id="@+id/level3_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/level3"
        android:layout_alignBottom="@+id/level3"
        android:layout_toRightOf="@+id/level1"
        android:background="@layout/original_button"
        android:text="得点"
        android:textStyle="bold" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:myapp="http://schemas.android.com/apk/res/org.example.irohaninumber"
        android:id="@+id/linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >
    </LinearLayout>

</RelativeLayout>
